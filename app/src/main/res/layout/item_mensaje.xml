<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@android:color/transparent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/inbox_margin_horizontal"
        android:layout_marginRight="@dimen/inbox_margin_horizontal"
        android:layout_marginTop="@dimen/inbox_margin_vertical"
        android:background="@android:color/white"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/iconoMensaje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="icono del mensaje"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:src="@drawable/ic_picture"/>

        <TextView
            android:id="@+id/etiquetaEmisor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toLeftOf="@+id/iconoMensaje"
            android:layout_alignParentLeft="true"
            android:paddingBottom="@dimen/inbox_margin_vertical"
            android:paddingTop="@dimen/inbox_margin_vertical"
            android:text="Medium Text"
            android:textSize="16sp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />

        <TextView
            android:id="@+id/etiquetaTiempo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Small Text"
            android:textSize="12sp"
            android:layout_alignParentLeft="true"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="0dp"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:layout_toLeftOf="@id/iconoMensaje"
            android:layout_alignParentBottom="false"
            android:layout_below="@+id/etiquetaEmisor"
            android:layout_alignParentStart="false"
            android:layout_marginBottom="@dimen/inbox_margin_vertical"/>
    </RelativeLayout>
</LinearLayout>