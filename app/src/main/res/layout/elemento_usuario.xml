<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white">


    <ImageView
        android:id="@+id/gravatarUsuario"
        android:src="@drawable/avatar_empty"
        android:contentDescription="@string/descripcion_avatar_usuario"
        style="@style/imagen_usuario"/>

    <ImageView
        android:id="@+id/checkmarkUsuarioImageView"
        android:src="@drawable/avatar_selected"
        android:contentDescription="@string/descripcion_usuario_checkmark"
        style="@style/imagen_usuario"
        android:visibility="invisible"/>


    <TextView
        android:id="@+id/etiquetaNombre"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:maxLines="2"
        android:padding="4dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/gravatarUsuario"/>

</RelativeLayout>